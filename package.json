{
    "name": "vscode-silq",
    "publisher": "eth-sri",
    "repository":  {
        "type": "git",
        "url": "https://github.com/eth-sri/vscode-silq"
    },
    "homepage": "https://silq.ethz.ch",
    "displayName": "vscode-silq",
    "description": "Adds silq language support for visual studio code.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.37.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:silq",
        "onCommand:silq.activate"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [{
             "id": "silq",
            "aliases": [
                "Silq",
                "silq"
            ],
            "extensions": [
                "slq"
            ],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "silq",
            "scopeName": "source.silq",
            "path": "./syntaxes/silq.tmLanguage.json"
        }],
        "configuration": {
            "title": "Silq",
            "properties": {
                "silq.binaryPath": {
                    "type": "string",
                    "default": null,
                    "description": "Path to Silq executable file."
                },
                "silq.autoRun": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically run Silq programs as they are opened and saved."
                }
            }
        },
        "commands": [{
            "command": "silq.run",
            "title": "Run Silq file in focus"
        }],
        "keybindings": [{
            "command": "silq.run",
            "key": "f5",
            "mac": "f5",
            "when": "editorTextFocus"
        }]
    },
    "scripts": {
        "vscode:prepublish": "cp ../silq/silq ../silq/silq.exe ../silq/silq-osx bin/ && strip bin/silq bin/silq.exe && npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.12.21",
        "@types/vscode": "^1.36.0",
        "glob": "^7.1.4",
        "mocha": "^6.1.4",
        "typescript": "^3.3.1",
        "tslint": "^5.12.1",
        "vscode-test": "^1.0.2"
    }
}
